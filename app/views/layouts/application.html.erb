<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg">
      <div class="container">
        <a class="navbar-brand" href="/">Blog on Rails</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right align-baseline">
            <% if user_signed_in? %>
              <li class="mr-2 align-middle p-2">
                <p>Signed in as <b><%= current_user.email %></b></p>
              </li>
              <li class="mr-1">
                <%= link_to "Account", edit_user_registration_path, class: 'btn btn-info text-white' %>
              </li>
              <li class="mr-1">
                <%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-dark text-white' %>
              </li>
            <% else %>
              <li>
                <%= link_to "Sign In", new_user_session_path, class: 'btn btn-default bg-primary text-white mr-2' %>
              </li>
              <li>
                <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-default bg-dark text-white' %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
